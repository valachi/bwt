class Calculator

  def costs(days, size)
    if size == 20
      case days
        when 0..5 then 0
        when 6 then 75
        when 7..8 then 25
        when 9..20 then 115
        when 21..30 then 165
        when 31..60 then 250
        else 1
      end
    elsif size == 40
      case days
        when 0..5 then 0
        when 6 then 0
        when 7..8 then 30
        when 9..20 then 115
        when 21..30 then 165
        when 31..60 then 250
        else 1 
      end
    else
      0
    end
  end

  def calculate(days, size) 
    (0..days).inject {|sum, day| sum + costs(day, size)} 
  end

end
